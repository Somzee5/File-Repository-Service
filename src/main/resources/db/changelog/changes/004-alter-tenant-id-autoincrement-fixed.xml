<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="004-alter-tenant-id-autoincrement-fixed" author="intern">

        <dropPrimaryKey tableName="cf_filerepo_tenant_config"/>

        <addAutoIncrement
                tableName="cf_filerepo_tenant_config"
                columnName="tenant_id"
                columnDataType="INT"
                incrementBy="1"
                startWith="1"/>

        <addPrimaryKey columnNames="tenant_id" constraintName="pk_cf_filerepo_tenant_config" tableName="cf_filerepo_tenant_config"/>

        <sql>
            SELECT setval('cf_filerepo_tenant_config_tenant_id_seq', (SELECT MAX(tenant_id) FROM cf_filerepo_tenant_config));
        </sql>

    </changeSet>
</databaseChangeLog>